<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_grey">

    <include layout="@layout/top_bar" />

    <include layout="@layout/bottom_bar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton"
        android:layout_width="386dp"
        android:layout_height="79dp"
        android:background="@drawable/empty_white_box"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="163dp"></androidx.appcompat.widget.AppCompatButton>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2"
        android:scaleY="2"
        android:text="@string/requests_for_guidance"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.146" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/empty_white_box"
        android:backgroundTint="@color/accept_green"
        android:text="@string/accept"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="170dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/empty_white_box"
        android:backgroundTint="#911010"
        android:text="@string/decline"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="212dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MylaPetrova"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="233dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:clickable="true"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/appCompatButton"
        app:srcCompat="@drawable/empty_profile_icon"
        tools:layout_editor_absoluteX="16dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AS VIEWS NÃO VAO PARA CIMA DA CAIXA BRANCA\nE NÃO SEI COMO RESOLVER"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="323dp" />

</androidx.constraintlayout.widget.ConstraintLayout>